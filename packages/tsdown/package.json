{
  "name": "tsdown",
  "version": "0.14.2",
  "packageManager": "pnpm@10.15.1",
  "description": "The Elegant Bundler for Libraries",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/rolldown/tsdown#readme",
  "bugs": {
    "url": "https://github.com/rolldown/tsdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolldown/tsdown.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "client.d.ts",
    "dist",
    "esm-shims.js"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./config": "./dist/config.mjs",
    "./plugins": "./dist/plugins.mjs",
    "./run": "./dist/run.mjs",
    "./package.json": "./package.json",
    "./client": "./client.d.ts"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "bin": {
    "tsdown": "./dist/run.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache --max-warnings 0 .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsx ./src/run.ts",
    "dev": "tsx ./src/run.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:preview": "pnpm -C docs run preview",
    "docs:generate": "pnpm -C docs run generate"
  },
  "dependencies": {
    "ansis": "catalog:prod",
    "cac": "catalog:prod",
    "chokidar": "catalog:prod",
    "debug": "catalog:prod",
    "diff": "catalog:prod",
    "empathic": "catalog:prod",
    "hookable": "catalog:prod",
    "rolldown": "catalog:prod",
    "rolldown-plugin-dts": "catalog:prod",
    "semver": "catalog:prod",
    "tinyexec": "catalog:prod",
    "tinyglobby": "catalog:prod",
    "tree-kill": "catalog:prod",
    "unconfig": "catalog:prod"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "prettier": "@sxzz/prettier-config"
}
